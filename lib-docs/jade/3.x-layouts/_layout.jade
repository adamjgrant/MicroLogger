  body
    .bleed
      header.fixed
        include _header
        block header

      block hero

      main.main
        block content
        .push

    - if (showFooter == true)
      footer.main
        - var xml = fs.readFileSync('lib-docs/img/everythingio.svg')

        .wrapper
          p
            span.eio-logo!= xml
            |  Made by&nbsp;
            a(href="http://twitter.com/everythingdotio") Everything

    - else
      script(src="/js/navbar-fixer.js")
